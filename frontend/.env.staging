# Staging environment variables
VITE_APP_NAME=Science Point (Staging)
VITE_APP_VERSION=1.0.0
VITE_API_BASE_URL=https://staging-api.sciencepoint.com
VITE_API_TIMEOUT=12000
VITE_NODE_ENV=staging

# Feature flags for staging
VITE_ENABLE_DEBUG=true
VITE_ENABLE_MOCK_DATA=false
VITE_ENABLE_DEV_TOOLS=true
VITE_ENABLE_CONSOLE_LOGS=true

# Staging-specific settings
VITE_AUTH_TOKEN_EXPIRY=43200
VITE_PAGINATION_LIMIT=25
VITE_FILE_UPLOAD_MAX_SIZE=524288000
VITE_CACHE_TTL=600

# External service endpoints (staging)
VITE_SENTRY_DSN=https://your-staging-sentry-dsn@sentry.io
VITE_ANALYTICS_ID=GA_STAGING_ID
VITE_ERROR_REPORTING_ENABLED=true

# Security settings
VITE_ENABLE_HTTPS_ONLY=true
VITE_ENABLE_CSP=false