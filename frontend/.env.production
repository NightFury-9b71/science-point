# Production environment variables
VITE_APP_NAME=Science Point
VITE_APP_VERSION=1.0.0
VITE_API_BASE_URL=https://api.sciencepoint.com
VITE_API_TIMEOUT=15000
VITE_NODE_ENV=production

# Feature flags for production
VITE_ENABLE_DEBUG=false
VITE_ENABLE_MOCK_DATA=false
VITE_ENABLE_DEV_TOOLS=false
VITE_ENABLE_CONSOLE_LOGS=false

# Production-specific settings
VITE_AUTH_TOKEN_EXPIRY=43200
VITE_PAGINATION_LIMIT=25
VITE_FILE_UPLOAD_MAX_SIZE=2097152
VITE_CACHE_TTL=900

# External service endpoints (production)
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io
VITE_ANALYTICS_ID=GA_MEASUREMENT_ID
VITE_ERROR_REPORTING_ENABLED=true
VITE_CDN_BASE_URL=https://cdn.sciencepoint.com

# Security settings
VITE_ENABLE_HTTPS_ONLY=true
VITE_ENABLE_CSP=true