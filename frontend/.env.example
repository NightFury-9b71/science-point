# Frontend Environment Variables
# Copy this file to .env and update the values for your environment

# ===========================================
# APPLICATION SETTINGS
# ===========================================

# Application name and version
VITE_APP_NAME=Science Point
VITE_APP_VERSION=1.0.0

# ===========================================
# API CONFIGURATION
# ===========================================

# Backend API base URL
VITE_API_BASE_URL=http://localhost:8000

# API timeout in milliseconds
VITE_API_TIMEOUT=10000

# ===========================================
# FRONTEND CONFIGURATION
# ===========================================

# Frontend base URL (for redirects, etc.)
VITE_FRONTEND_BASE_URL=http://localhost:5173

# ===========================================
# AUTHENTICATION SETTINGS
# ===========================================

# Token expiry time in seconds (24 hours default)
VITE_AUTH_TOKEN_EXPIRY=86400

# ===========================================
# FEATURE FLAGS
# ===========================================

# Enable debug mode (development only)
VITE_ENABLE_DEBUG=false

# Enable mock data for development
VITE_ENABLE_MOCK_DATA=false

# Enable developer tools
VITE_ENABLE_DEV_TOOLS=true

# Enable console logging
VITE_ENABLE_CONSOLE_LOGS=true

# Enable error reporting
VITE_ERROR_REPORTING_ENABLED=false

# ===========================================
# UI SETTINGS
# ===========================================

# Default pagination limit
VITE_PAGINATION_LIMIT=25

# Maximum file upload size in bytes (5MB default)
VITE_FILE_UPLOAD_MAX_SIZE=5242880

# Cache timeout in seconds (5 minutes default)
VITE_CACHE_TTL=300

# ===========================================
# EXTERNAL SERVICES
# ===========================================

# Sentry DSN for error reporting
# VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Analytics ID (Google Analytics, etc.)
# VITE_ANALYTICS_ID=GA-XXXXXXXXX

# CDN base URL for static assets
# VITE_CDN_BASE_URL=https://cdn.sciencepoint.com

# ===========================================
# SECURITY SETTINGS
# ===========================================

# Force HTTPS only in production
VITE_ENABLE_HTTPS_ONLY=false

# Enable Content Security Policy
VITE_ENABLE_CSP=false

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================

# Enable React Query DevTools
VITE_ENABLE_REACT_QUERY_DEVTOOLS=true

# Enable Redux DevTools
VITE_ENABLE_REDUX_DEVTOOLS=true

# ===========================================
# PRODUCTION SETTINGS (uncomment and configure for production)
# ===========================================

# For production, use environment-specific values:
# VITE_API_BASE_URL=https://api.sciencepoint.com
# VITE_FRONTEND_BASE_URL=https://sciencepoint.com
# VITE_ENABLE_DEBUG=false
# VITE_ENABLE_MOCK_DATA=false
# VITE_ENABLE_DEV_TOOLS=false
# VITE_ENABLE_CONSOLE_LOGS=false
# VITE_ERROR_REPORTING_ENABLED=true
# VITE_ENABLE_HTTPS_ONLY=true
# VITE_ENABLE_CSP=true
# VITE_SENTRY_DSN=https://your-production-sentry-dsn@sentry.io/project-id
# VITE_ANALYTICS_ID=GA-YOUR-PRODUCTION-ID